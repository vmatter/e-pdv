{
  "name": "with-stripe-typescript",
  "author": "@GiselaMD",
  "version": "2.0.0",
  "description": "Full-stack TypeScript example using Next.js, react-stripe-js, and stripe-node.",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "coverage": "jest -u --coverage --runInBand --coverage --verbose",
    "test-all": "yarn lint && yarn type-check && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@material-ui/core": "^5.0.0-alpha.27",
    "@material-ui/icons": "^4.11.2",
    "@stripe/react-stripe-js": "1.1.2",
    "@stripe/stripe-js": "1.5.0",
    "jwt-decode": "^3.1.2",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "next": "latest",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-number-format": "^4.5.5",
    "react-test-renderer": "17.0.2",
    "stripe": "8.56.0",
    "swr": "^0.1.16",
    "use-shopping-cart": "2.1.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.2.0",
    "@emotion/jest": "^11.3.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.21",
    "@types/micro": "^7.3.3",
    "@types/micro-cors": "^0.1.0",
    "@types/node": "^13.1.2",
    "@types/react": "^16.9.17",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
